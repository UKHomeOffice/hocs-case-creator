{
  "schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "DECS Migration",
  "description": "The message format for extracted cases to be created in DECS.",
  "definitions": {
    "caseDataItem": {
      "description": "Key value pair for one item of case data.",
      "type": "array",
      "minItems": 2,
      "maxItems": 2,
      "prefixItems": [
        { "type": "string" },
        { "type": "string" }
      ],
      "items": false
    },
    "caseData": {
      "description": "Array of case Data items",
      "type": "array",
      "items": {
        "oneOf" : [
          {
        "$ref": "#/definitions/caseDataItem"
          }]
      }
    },
    "attachment": {
      "description": "A single attachment",
      "type": "object",
      "properties": {
        "path": {
          "description": "Path to document in untrusted bucket",
          "type": "string"
        },
        "label": {
          "description": "Label",
          "type": "string"
        },
        "documentType": {
          "description": "The document type",
          "type": "string"
        }
      }
    },
    "caseAttachments": {
      "description": "Attachments for the case",
      "type": "array",
      "items": {
        "oneOf": [
          {
            "$ref": "#/definitions/attachment"
          }
        ]
      }
    },
    "case": {
      "description": "All the data for a case",
      "type": "object",
      "required": [
        "caseType",
        "sourceCaseId",
        "correspondentName",
        "correspondenceEmail",
        "caseStatus",
        "caseStatusDate",
        "creationDate",
        "caseData",
        "caseAttachments"
      ],
      "additionalProperties": false,
      "properties": {
        "caseType": {
          "type":"string"
        },
        "sourceCaseId": {
          "type":"string"
        },
        "correspondentName": {
          "type":"string"
        },
        "correspondenceEmail": {
          "type":"string"
        },
        "caseStatus": {
          "type":"string"
        },
        "caseStatusDate": {
          "type":"string",
          "format": "date"
        },
        "creationDate": {
          "type": "string",
          "format": "date"
        },
        "caseData": {
          "anyOf" : [
            {
            "$ref": "#/definitions/caseData"
            }
          ]
        },
        "caseAttachments": {
          "anyOf": [
            {
              "$ref": "#/definitions/caseAttachments"
            }
          ]
        }
      }
    }
  },
  "type": "object",
  "required": [
    "messageType",
    "case"
  ],
  "additionalProperties": false,
  "properties": {
    "messageType": {
      "type":"string"
    },
    "case": {
      "anyOf" : [
        {
        "$ref": "#/definitions/case"
        }
      ]
    }
  }
}
